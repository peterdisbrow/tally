{
  "name": "tally-connect",
  "version": "1.0.0",
  "description": "Tally — Remote monitoring for ATEM School customers",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "start:mock-lab": "electron src/main-mock-lab.js",
    "dev:mock-lab": "electron src/main-mock-lab.js --dev",
    "build:mac": "electron-builder --mac",
    "build:mock-lab:mac": "electron-builder --mac --config electron-builder.mock-lab.json",
    "build:mac:dist": "mkdir -p \"$HOME/Desktop/Tally\" && rm -f \"dist/Tally by ATEM School-1.0.0-arm64.dmg\" \"dist/Tally by ATEM School-1.0.0-arm64.dmg.blockmap\" && electron-builder --mac && cp -f \"dist/Tally by ATEM School-1.0.0-arm64.dmg\" \"$HOME/Desktop/Tally/Tally-by-ATEM-School.dmg\"",
    "build:win": "electron-builder --win",
    "build:mock-lab:win": "electron-builder --win --config electron-builder.mock-lab.json",
    "build:all": "electron-builder --mac --win"
  },
  "build": {
    "appId": "com.atemschool.tally",
    "productName": "Tally by ATEM School",
    "copyright": "Copyright © 2026 ATEM School",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json",
      "package-lock.json",
      "!dist{,/**/*}",
      "!dist-mock-lab{,/**/*}",
      "!.git{,/**/*}",
      "!**/.DS_Store"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "extraResources": [
      {
        "from": "../church-client",
        "to": "church-client",
        "filter": [
          "**/*",
          "!.git",
          "!.git/**"
        ]
      }
    ]
  },
  "dependencies": {
    "atem-connection": "^3.9.0",
    "commander": "^12.0.0",
    "electron-updater": "^6.1.0",
    "obs-websocket-js": "^5.0.4",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "playwright": "^1.58.2"
  }
}
